{
  "manifest_version": 2,

  "name": "LifeResize",
  "description": "Rescale the screen to fit LifeSize",
  "version": "1.0",

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "lifesize16.png",
    "48": "lifesize48.png",
    "128": "lifesize128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "19": "lifesize19.png",
      "38": "lifesize38.png"
    },
    "default_popup": "popup.html"
  }
}
